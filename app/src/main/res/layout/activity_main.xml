<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#82B1FF"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_login"
        android:layout_width="114dp"
        android:layout_height="40dp"
        android:layout_marginStart="139dp"
        android:layout_marginTop="431dp"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="298dp"
        android:backgroundTint="#560C71"
        android:onClick="MainPageMove"
        android:text="Login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/passwordL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:hint="@string/hint2"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.435"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.395" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="277dp"
        android:layout_height="125dp"
        android:layout_marginTop="63dp"
        android:layout_marginBottom="585dp"
        android:fontFamily="@font/montserrat_subrayada"
        android:text="Login "
        android:textSize="70sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonRL"
        android:layout_width="108dp"
        android:layout_height="41dp"
        android:layout_marginStart="139dp"
        android:layout_marginTop="492dp"
        android:layout_marginEnd="161dp"
        android:layout_marginBottom="230dp"
        android:backgroundTint="#560C71"
        android:onClick="RegestrationMove"
        android:text="Register"
        android:textColorLink="#009E3535"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/phoneL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="241dp"
        android:layout_marginEnd="114dp"
        android:layout_marginBottom="487dp"
        android:ems="10"
        android:hint="@string/hint1"
        android:inputType="phone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>