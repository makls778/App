<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-app"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#82B1FF"
    tools:context=".MainPage">


  <TextView
      android:id="@+id/balance_text_view"
      android:layout_width="370dp"
      android:layout_height="122dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="132dp"
      android:layout_marginEnd="25dp"
      android:layout_marginBottom="519dp"
      android:text="Баланс: 100 грн"
      android:textSize="50sp"
      app2:layout_constraintBottom_toBottomOf="parent"
      app2:layout_constraintEnd_toEndOf="parent"
      app2:layout_constraintStart_toStartOf="parent"
      app2:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <Button
      android:id="@+id/recharge_button"
      android:layout_width="159dp"
      android:layout_height="55dp"
      android:layout_marginStart="126dp"
      android:layout_marginTop="270dp"
      android:layout_marginEnd="126dp"
      android:layout_marginBottom="448dp"
      android:text="Поповнити рахунок"
      app2:layout_constraintBottom_toBottomOf="parent"
      app2:layout_constraintEnd_toEndOf="parent"
      app2:layout_constraintStart_toStartOf="parent"
      app2:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/balance_text_view" />

  <Button
      android:id="@+id/tarifbutton"
      android:layout_width="370dp"
      android:layout_height="80dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="467dp"
      android:layout_marginEnd="25dp"
      android:layout_marginBottom="226dp"
      android:text="Тарифи"
      app2:layout_constraintBottom_toBottomOf="parent"
      app2:layout_constraintEnd_toEndOf="parent"
      app2:layout_constraintStart_toStartOf="parent"
      app2:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/balance_text_view" />

  <Button
      android:id="@+id/employeebutton"
      android:layout_width="370dp"
      android:layout_height="83dp"
      android:layout_marginStart="13dp"
      android:layout_marginTop="592dp"
      android:layout_marginEnd="28dp"
      android:layout_marginBottom="98dp"
      android:text="Працівники"
      app2:layout_constraintBottom_toBottomOf="parent"
      app2:layout_constraintEnd_toEndOf="parent"
      app2:layout_constraintStart_toStartOf="parent"
      app2:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/balance_text_view" />

  <Button
      android:id="@+id/button6"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="312dp"
      android:layout_marginTop="16dp"
      android:layout_marginEnd="3dp"
      android:layout_marginBottom="709dp"
      android:onClick="MainMove"
      android:text="Log out"
      app2:layout_constraintBottom_toBottomOf="parent"
      app2:layout_constraintEnd_toEndOf="parent"
      app2:layout_constraintStart_toStartOf="parent"
      app2:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>